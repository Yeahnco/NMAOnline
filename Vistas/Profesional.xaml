<mah:MetroWindow x:Class="Vistas.Profesional"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"         
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vistas"
        mc:Ignorable="d"
        Title="Profesional" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Margin="10,10,624,10">
            <Button x:Name="btnListaClientes" Height="30" Margin="10,35,10,349" Content="Profesionales" BorderThickness="0" Background="White"/>
            <Button x:Name="btnListaProfesionales" Height="30" Margin="10,0,10,384" Content="Clientes" BorderThickness="0" Background="White"/>
        </Grid>
        <DataGrid x:Name="dtgActividadesProfesional" 
                  AutoGenerateColumns="False" 
                  HorizontalAlignment="Left" 
                  Height="414"
                  Margin="181,0,0,0"
                  VerticalAlignment="Center"
                  Width="609">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Revisión" Width="150"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</mah:MetroWindow>
