<mah:MetroWindow 
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"         
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:Vistas"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" x:Class="Vistas.Profesional"
                 mc:Ignorable="d"
                 Title="PROFESIONAL" Height="500" Width="1000"
                 WindowStyle="None"
                 ResizeMode="NoResize"
                 Background="Transparent"
                 AllowsTransparency="True">

    <Border Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Background="#FF4E16D1"
                        Grid.ColumnSpan="1">
                <TextBlock Text="NMA" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="20"
                           FontWeight="Black"
                           Foreground="White"
                           Margin="20,0,0,0"
                           />
            </StackPanel>
            <StackPanel Background="#FF4E16D1"
                        Grid.Column="2"/>
            <StackPanel Grid.ColumnSpan="1"
                        Grid.Row="2">
                <Button BorderThickness="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.ColumnSpan="1">
                            <Image Source="Recursos/Iconos/PURPURA/icons8-user-groups-50.png" 
                                   Width="20" 
                                   Height="20"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   />
                        </StackPanel>
                        <TextBlock Text="Clientes"
                                   Width="50"
                                   Height="15"/>
                    </Grid>
                </Button>
                <Button BorderThickness="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.ColumnSpan="1">
                            <iconPacks:PackIconModern Width="20" Height="20" Kind="User" Foreground="#FF4E16D1"/>
                        </StackPanel>
                        <TextBlock Text="Profesionales"
                                   Width="70"
                                   Height="15"/>
                    </Grid>
                </Button>
                

            </StackPanel>
            <TextBox Grid.Column="1" 
                     HorizontalAlignment="Left" 
                     Height="20" 
                     Margin="590,5,0,0" 
                     Grid.Row="1" 
                     TextWrapping="Wrap" 
                     Text="Buscar" 
                     VerticalAlignment="Top" 
                     Width="200"
                     Background="Gray"
                     >
            </TextBox>
            <TabControl Grid.Column="2"
                        Grid.Row="1">
                <TabItem Header="Revision" 
                         mah:HeaderedControlHelper.HeaderFontSize="20" 
                         Margin="10,5,-10,-5"
                         />
            </TabControl>
            <ContentControl Grid.Row="1"
                            Margin="10,45,10,10" 
                            Grid.Column="1"/>

        </Grid>
    </Border>
</mah:MetroWindow>
